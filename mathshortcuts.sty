% Box commands
\newtcbox{\purplebox}[1][]{
	nobeforeafter,
	math upper,
	tcbox raise base,
	enhanced,
	colframe=blue!30,
	colback=blue!30,
	boxrule=1pt,
}

% purple box shortcut
\newcommand{\pbox}[1]{
	\begin{empheq}[
		box=\purplebox]{align}
		#1
	\end{empheq}
}

\newtcbox{\greenbox}[1][]{
	nobeforeafter,
	math upper,
	tcbox raise base,
	enhanced,
	colframe=mattegreen,
	colback=mattegreen,
	boxrule=1pt,
}

% purple box shortcut
\newcommand{\gbox}[1]{
	\begin{empheq}[
		box=\greenbox]{align}
		#1
	\end{empheq}
}

