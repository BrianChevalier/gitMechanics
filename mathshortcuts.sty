\RequirePackage{empheq}
\RequirePackage[most]{tcolorbox}
% Box commands
\newtcbox{\purplebox}[1][]{
	nobeforeafter,
	math upper,
	tcbox raise base,
	enhanced,
	colframe=blue!30,
	colback=blue!30,
	boxrule=1pt,
}

% purple box shortcut
\newcommand{\pbox}[1]{
	\begin{empheq}[
		box=\purplebox]{align}
		#1
	\end{empheq}
}

\newtcbox{\greenbox}[1][]{
	nobeforeafter,
	math upper,
	tcbox raise base,
	enhanced,
	colframe=mattegreen,
	colback=mattegreen,
	boxrule=1pt,
}

% purple box shortcut
\newcommand{\gbox}[1]{
	\begin{empheq}[
		box=\greenbox]{align}
		#1
	\end{empheq}
}

%% Pseudo-code box
% tcolorbox documentation:
% http://texdoc.net/texmf-dist/doc/latex/tcolorbox/tcolorbox.pdf#page39
\definecolor{mattegreen}{rgb}{0.84,0.89,0.74}

\newenvironment{pseudocode}
{\begin{tcolorbox}[
	width=0.9\columnwidth,
	colback={mattegreen},
	title={\textbf{Pseudocode}},
	toprule = 10pt, %padding above title
	colbacktitle= mattegreen,
	coltitle=black,
	colframe=mattegreen,
	rounded corners,
	arc=10pt]

	\begin{enumerate}
}
{\end{enumerate}
\end{tcolorbox}  }

